<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.activities.customerAuth.CustomerRegister">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/customer_register_toolbar"
            layout="@layout/toolbar_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/customer_text_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/adamina"
            android:text="@string/register"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#03071E"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_register_toolbar" />

        <ImageView
            android:id="@+id/customer_icon_register"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/verify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_text_register" />


        <EditText
            android:id="@+id/customer_register_editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="@string/name"
            android:inputType="text"
            android:textColor="#121212"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/customer_icon_register" />

        <EditText
            android:id="@+id/customer_register_editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColor="#121212"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/customer_register_editText_name" />

        <EditText
            android:id="@+id/customer_register_editText_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColor="#121212"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/customer_register_editText_email" />


        <EditText
            android:id="@+id/customer_register_editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/password"
            android:inputType="numberPassword"
            android:textColor="#121212"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/customer_register_editText_phone" />

        <EditText
            android:id="@+id/customer_register_editText_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:gravity="top|start"
            android:hint="@string/address"
            android:inputType="textMultiLine"
            android:lines="3"
            android:textColor="#121212"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/customer_register_editText_password" />

        <Button
            android:id="@+id/customer_register__register_button"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:background="#E57373"
            android:text="@string/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customer_register_editText_address" />

        <TextView
            android:id="@+id/customer_register_textView_login_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="@string/already_have_account_login_here"
            android:textColor="#151414"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_register__register_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>